= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :season
    = f.text_field :season
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :cost
    = f.text_field :cost
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :short_desc
    = f.text_field :short_desc
  .field
    = f.label :sale
    = f.check_box :sale
  .field
    = f.label :stock
    = f.number_field :stock
  .field
    = f.label :preorder
    = f.number_field :preorder
  .field
    = f.label :preorder
    = f.check_box :preorder
  .actions
    = f.submit 'Save'
