:css
  #overlay {
    position: fixed; /* Sit on top of the page content */
    display: none; /* Hidden by default */
    width: 101%; /* Full width (cover the whole page) */
    height: 100%; /* Full height (cover the whole page) */
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5); /* Black background with opacity */
    z-index: 2; /* Specify a stack order in case you're using a different order for other elements */
    cursor: pointer; /* Add a pointer on hover */
  }
  .logo_stuff {
    position: relative;
    top: 30%;
    margin: 0 auto;
    text-align: center;
  }
  .links {
    font-size:25px;
    color:white;
  }
  #enter_shop:hover {
    color: silver;
    text-decoration: none;
  }

#overlay.row
  .col-md-12{style: 'text-align: center;top: 32%;margin-bottom:30px;'}
    %p.links Welcome
  .col-md-12.logo_stuff
    #logo= image_tag 'logo.PNG'
  .col-md-12{style: 'text-align: center;top: 32%;'}
    %a.links{href: '/shop', id: 'enter_shop'} Enter Shop

:javascript
  $('.navbar').hide();
  $('#overlay').show();